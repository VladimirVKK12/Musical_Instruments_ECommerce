@model Musical_Instruments_ECommerce.ViewModel.AccountVM.LoginVM;

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 600px;">
        <h2 class="text-center mb-4">Login</h2>

        <form method="post" asp-action="Login">
            @if (TempData["WrongPassOrEmail"] != null)
            {
                <div class="alert alert-danger">@TempData["WrongPassOrEmail"]</div>
            }
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                <label class="form-check-label">Remember Me</label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>

            <div class="text-center mt-3">
                <p>Don't have an account? <a asp-action="Register">Sign up</a></p>
            </div>
        </form>
    </div>
</div>
