@model Musical_Instruments_ECommerce.Models.Accounts;

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 600px;">
        <h2 class="text-center mb-4">Create Account</h2>

        <form method="post" asp-action="Register">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Choose a username" />
                <span asp-validation-for="Username" class="text-danger"></span>
                @if (TempData["Username"] != null)
                {
                    <div class="alert alert-danger">@TempData["Username"]</div>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
                @if (TempData["Email"] != null)
                {
                    <div class="alert alert-danger">@TempData["Email"]</div>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Choose a password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Sign Up</button>

            <div class="text-center mt-3">
                <p>Already have an account? <a asp-action="Login">Login</a></p>
            </div>
        </form>
    </div>
</div>

